<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activityDialogReadRemoteRSSI_mainView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bb000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:clickable="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/activityDialogReadRemoteRSSI_contentView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ca_calibrate_background"
            android:minHeight="420dp"
            android:orientation="vertical"
            android:weightSum="4">

            <LinearLayout
                android:id="@+id/activityDialogReadRemoteRSSI_shapeViewGroup"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.7"
                android:gravity="bottom"
                android:orientation="horizontal" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginBottom="4dp"
                        android:text="0:30"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/activityDialogReadRemoteRSSI_timeLeftTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginBottom="4dp"
                        android:text="0:30"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/activityDialogReadRemoteRSSI_maxValueTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginBottom="4dp"
                        android:text="0:30"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/activityDialogReadRemoteRSSI_minValueTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="24dp"
                        android:text="0:30"
                        android:textColor="#000000" />


                </LinearLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3">

                    <TextView
                        android:id="@+id/activityDialogReadRemoteRSSI_averageValueTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="24dp"
                        android:text="62"
                        android:textColor="@color/white_1"
                        android:textSize="26dp" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/activityDialogReadRemoteRSSI_enableButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_ca_calibrate_startover" />

            <Button
                android:id="@+id/activityDialogReadRemoteRSSI_setButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_ca_calibrate_setrssi" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>