<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->

    <style name="ProgressDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/grey_1</item>
        <item name="colorAccent">@color/pink_1</item>
    </style>

    <style name="BaseLightNoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlActivated">@color/pink_1</item>
        <item name="android:textColorHighlight">@color/pink_5</item>
        <item name="android:textColorLink">@color/blue_1</item>
        <item name="android:textColorLinkInverse">@color/blue_1</item>
    </style>

    <style name="NoActionBarDialogTheme" parent="BaseLightNoActionBarTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent2</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="colorPrimaryDark">@color/transparent</item>
    </style>

    <style name="MenuTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textSize">20dp</item>
    </style>

    <style name="ToolBarStyle" parent="Base.V7.Widget.AppCompat.Toolbar">
        <item name="android:elevation">2dp</item>
        <item name="titleTextAppearance">@style/ToolbarTextStyle</item>
    </style>

    <style name="ToolbarTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ToolbarTheme">
        <item name="actionMenuTextAppearance">@style/MenuTextStyle</item>
        <item name="actionMenuTextColor">@color/grey_4</item>
        <item name="colorControlNormal">@color/white_1</item>
        <item name="toolbarStyle">@style/ToolBarStyle</item>
    </style>

    <style name="NoActionBarTheme" parent="BaseLightNoActionBarTheme">
        <item name="actionMenuTextColor">@color/white_1</item>
        <item name="actionMenuTextAppearance">@style/ActionBarMenuTextStyle</item>
        <item name="android:textAppearanceButton">@style/ButtonTextAppearanceStyle</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="colorPrimaryDark">@color/white_1</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
    </style>

    <style name="ActionBarMenuTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textSize">20dp</item>
    </style>

    <style name="ButtonTextAppearanceStyle" parent="@style/Base.TextAppearance.AppCompat.Button">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
